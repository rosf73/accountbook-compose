<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AndroidAccountBook" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.Main" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/off_white</item>
        <item name="colorOnBackground">@color/purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/off_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- App bar setting. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>